// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl= env("DIRECT_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
}

model Price {
  id Int @id @default(autoincrement())
  game String
  currency Int
  price Float
}

model Item {
  id Int @id @default(autoincrement())
  game String
  price Int
  item_name String
  picture String
  info String
}